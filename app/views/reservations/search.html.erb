<%= form_for @reservation, url: {action: "search"} do |f| %>
  <% if @reservation.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @reservation.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :day %>
  <%= f.text_field :day %>
  <br>
  <%= f.label :time %>
  <%= f.text_field :time %>
  <br>
  <%= f.label :guests %>
  <%= f.text_field :guests %>
  <br>
  <%= f.submit "Find a seat!", :class => "button" %>
<% end %>

<% if @reservations != nil %>
  <%= render "search_results" %>
<% end %>
  


